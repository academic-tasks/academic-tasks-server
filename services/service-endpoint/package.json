{
  "name": "@academic-tasks/endpoint",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run db:migrate && npm run seed:run && npm run start:prod",
    "start:nest": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm",
    "typeorm:ds-migration": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm -d src/infrastructure/database/data-sources/app-migration.data-source.ts",
    "typeorm:ds-seed": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm -d src/infrastructure/database/data-sources/seed.data-source.ts",
    "typeorm:entity": "npm run typeorm entity:create",
    "typeorm:generate": "npm run typeorm migration:generate",
    "typeorm:create": "npm run typeorm migration:create",
    "db:migrate": "npm run typeorm:ds-migration migration:run",
    "db:rollback": "npm run typeorm:ds-migration migration:revert",
    "seed:create": "npm run typeorm:ds-seed migration:create",
    "seed:run": "npm run typeorm:ds-seed migration:run",
    "seed:rollback": "npm run typeorm:ds-seed migration:revert",
    "plop": "plop"
  },
  "dependencies": {
    "@academic-tasks/schemas": "file:../../packages/lib-schemas",
    "@casl/ability": "^6.3.3",
    "@keycloak/keycloak-admin-client": "^20.0.3",
    "@nestjs/apollo": "^10.1.7",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^10.1.7",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/throttler": "^3.1.0",
    "@nestjs/typeorm": "^9.0.1",
    "apollo-server-express": "^3.11.1",
    "compression": "^1.7.4",
    "date-fns": "^2.29.3",
    "dompurify": "^2.4.1",
    "graphql": "^16.6.0",
    "graphql-type-json": "^0.3.2",
    "helmet": "^6.0.1",
    "inclusion": "^1.0.1",
    "isomorphic-dompurify": "^0.24.0",
    "lodash": "^4.17.21",
    "meilisearch": "^0.29.1",
    "openid-client": "^5.3.1",
    "p-map": "^5.5.0",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "short-uuid": "^4.2.0",
    "typeorm": "^0.3.10",
    "uuid": "^8.3.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/compression": "^1.7.2",
    "@types/dompurify": "^2.4.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/lodash": "^4.14.191",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/passport": "^1.0.10",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "change-case": "^4.1.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "plop": "^3.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-morph": "^16.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.9.4"
  }
